<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_watchlist_card"
    android:layout_width="130dp"
    android:layout_height="150dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler_watchlist_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/gradient"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/recycler_watchlist_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorSecondary"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/recycler_watchlist_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_baseline_remove_circle_outline_24"
            android:textAlignment="textEnd" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>