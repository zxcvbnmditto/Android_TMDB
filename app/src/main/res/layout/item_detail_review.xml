<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:outlineAmbientShadowColor="#1d2a3d"
    android:shadowColor="#1d2a3d"
    android:shadowDx="0"
    android:shadowDy="10"
    android:elevation="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recycler_detail_review_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/recycler_detail_review_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorSecondary"
            android:drawableEnd="@drawable/ic_baseline_star_rate"/>

        <TextView
            android:id="@+id/recycler_detail_review_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorSecondary"
            android:ellipsize="end"
            android:maxLines="3" />
    </LinearLayout>
</androidx.cardview.widget.CardView>