<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/header" />

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/carousel_slider"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/top_navbar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerInParent="true"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="1dp"
        app:sliderIndicatorSelectedColor="@color/colorPrimary"
        app:sliderIndicatorUnselectedColor="@color/colorSecondary"
        app:sliderScrollTimeInSec="1" />

    <TextView
        android:id="@+id/top_rated_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/carousel_slider"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:text="Top-Rated"
        android:textSize="30dp"
        android:textColor="@color/colorSecondary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_rated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_rated_title"
        android:layout_marginStart="20dp"
        android:scrollbars="horizontal"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>